<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
       <LinearLayout
        android:background="@drawable/red_to_white_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="vertical">
        
        <TextView 
            android:text="@string/akaTitle"
            style="@style/TextBlackXL"
            android:gravity="left"/>
        
        <TextView 
            android:text="@string/compFirstname"
            style="@style/TextBlackXL"
            android:gravity="left"/>
        
        <EditText 
            android:id="@+id/akaFirstname"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:inputType="text"/>
        
        <TextView 
            android:text="@string/compLastname"
            style="@style/TextBlackXL"
            android:gravity="left"/>
        
        <EditText 
            android:id="@+id/akaLastname"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:inputType="text"/>
        
        
    </LinearLayout>

    <LinearLayout 
        android:background="@drawable/only_white_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="vertical">
        
        <TextView 
            android:text="@string/shiroTitle"
            style="@style/TextBlackXL"
            android:gravity="left"/>
        
        <TextView 
            android:text="@string/compFirstname"
            style="@style/TextBlackXL"
            android:gravity="left"/>
        
        <EditText 
            android:id="@+id/shiroFirstname"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:inputType="text"/>
        
        <TextView 
            android:text="@string/compLastname"
            style="@style/TextBlackXL"
            android:gravity="left"/>
        
        <EditText 
            android:id="@+id/shiroLastname"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" 
            android:inputType="text"/> 
            
        
    </LinearLayout>

    </LinearLayout>

    <LinearLayout android:background="@drawable/only_white_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
    
    <ToggleButton
        android:id="@+id/finaleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finale"
    	android:textOn="@string/finale"
 		android:textOff="@string/evaluation"
        android:background="@drawable/white_btn_clean"
        style="@style/TextBlackXL"
        android:layout_marginLeft="10sp"
    	android:layout_marginTop="10sp"
    	android:layout_marginRight="5sp"
    	android:layout_marginBottom="10sp" />
    
    <Button 
            android:id="@+id/btAddCompetitors"
            android:background="@drawable/white_btn_clean"
            style="@style/TextBlackXL"
            android:text="@string/startMatch"
            android:layout_width="fill_parent"
            android:layout_marginLeft="5sp"
    	android:layout_marginTop="10sp"
    	android:layout_marginRight="10sp"
    	android:layout_marginBottom="10sp"/>
    </LinearLayout>

</LinearLayout>